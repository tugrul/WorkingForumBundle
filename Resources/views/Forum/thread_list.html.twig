{% extends '@YosimitsoWorkingForum/Common/base.html.twig' %}

{% block forum_header %}
    {% if wf_is_logged_in() %}
    <a class="btn btn-primary" href="{{ path('workingforum_new_thread', {'forumSlug': subforum.forum.slug,
        'subforumSlug' : subforum.slug}) }}">{{ ('forum.new_thread' | trans) }}</a>
    {% endif %}
{% endblock %}

{% block forum %}

    <h1>{{ subforum.name }}</h1>

    {% if postList is empty %}
        <p>{{ 'forum.empty_forum' | trans }}</p>
    {% else %}

        {% include '@YosimitsoWorkingForum/Common/Include/thread_list.html.twig' %}

    {% endif %}

{% endblock %}

{% block forum_footer %}
    {% if postList is not empty %}
        {{ knp_pagination_render(postList, null, {}, {'align': 'center'}) }}
    {% endif %}
{% endblock %}