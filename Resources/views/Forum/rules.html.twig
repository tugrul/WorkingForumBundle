
{% extends '@YosimitsoWorkingForum/Common/base.html.twig' %}

{% trans_default_domain 'YosimitsoWorkingForumBundle' %}


{% block forum_header %}
    {% if (rules | length > 1) %}
        <div class="form-inline">
            <div class="form-group">
                <label for="rules-langs">{{ 'forum.switch_lang' | trans }}:</label>
                <select class="form-control" id="rules-langs" onchange="document.location.href = this.value;">
                    {% for item in rules %}
                        <option value="{{ path('workingforum_rules_locale', {'locale': item.lang}) }}"
                                {{ rule.id == item.id ? 'selected="selected"' : '' }}>{{ item.lang }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>
    {% endif %}
{% endblock %}

{% block forum %}

    <h1>{{ 'forum.forum_rules' | trans }}</h1>

    {% if rule is null %}
        <p><em>{{ 'forum.no_rules_available' | trans }}</em></p>
    {% else %}
        <p>{{ 'admin.rules.lang' | trans }}: {{ rule.lang }}</p>

        <div id="rules-content">
            {{ rule.content | markdown | wf_emoji | raw }}
        </div>
    {% endif %}

{% endblock %}